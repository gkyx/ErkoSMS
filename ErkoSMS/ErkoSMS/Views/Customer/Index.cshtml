                        exportOptions: {
                            columns: ".data"
                        },
                        filename: function () {
                            var dateNow = window.moment(new Date(), "DD.MM.YYYY").format("DD_MM_YYYY_HHmmss");
                            return "Müşteriler_" + dateNow;
                        },
                    },
