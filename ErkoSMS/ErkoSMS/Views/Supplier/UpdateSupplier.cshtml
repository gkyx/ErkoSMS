
@model ErkoSMS.ViewModels.SupplierViewModel

    <div>
        <h3>Order Güncelle</h3>
        <hr />
        @using (Html.BeginForm("UpdateSupplier", "Supplier", FormMethod.Post, new { data_erkosms_role = "ajax-form", id = "UpdateSupplierForm", style = "width:1200px" }))
        {
            @Html.Hidden("SupplierId", Model.SupplierId)
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name)
                </div>
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => x.Address)
                    @Html.TextBoxFor(x => x.Address)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(x => x.Country)
                    @Html.TextBoxFor(x => x.Country)
                </div>
                <div class="form-group col-md-2">
                    @Html.LabelFor(x => x.PhoneNumber)
                    @Html.TextBoxFor(x => x.PhoneNumber)
                </div>
                <div class="form-group col-md-2">
                    <input type="submit" class="btn btn-primary pull-right" value="Kaydet" />
                </div>
            </div>
        }

    </div>

<script>
    $("#UpdateSupplierForm").on('ajax-form:succeed', function (ev,data) {
        vex.dialog.alert("Tedarikçi güncellendi.");
        var tg = $(ev.currentTarget);
        closeParentVexModal(tg);
        listSuppliers();
    });

</script>
