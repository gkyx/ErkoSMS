
@model ErkoSMS.ViewModels.SupplierViewModel


<div>
    <h3>Tedarikçi Güncelle</h3>
    <hr />
    @using (Html.BeginForm("UpdateSupplier", "Supplier", FormMethod.Post, new { data_erkosms_role = "ajax-form", id = "UpdateSupplierForm", style = "width:700px" }))
    {
        @Html.Hidden("SupplierId", Model.SupplierId)
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row mt-10">
            <div class="col-md-3">
                @Html.LabelFor(x => x.Name)
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Name)
            </div>
        </div>
        <div class="row mt-10">
            <div class="col-md-3">
                @Html.LabelFor(x => x.Country)
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.Country)
            </div>
        </div>

        <div class="row mt-10">
            <div class="col-md-3">
                @Html.LabelFor(x => x.PhoneNumber)
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(x => x.PhoneNumber)
            </div>
        </div>
        <div class="row mt-10">
            <div class="col-md-3">
                @Html.LabelFor(x => x.Address)
            </div>
            <div class="col-md-3">
                @Html.TextAreaFor(x => x.Address)
            </div>
        </div>
        <div class="row mt-10">
            <div class="col-md-9">
                <input type="submit" class="btn btn-primary pull-right" value="Kaydet" />
            </div>
        </div>
    }

</div>

<script>
    $("#UpdateSupplierForm").on('ajax-form:succeed', function (ev, data) {
        vex.dialog.alert("Tedarikçi güncellendi.");
        var tg = $(ev.currentTarget);
        closeParentVexModal(tg);
        listSuppliers();
    });

</script>
